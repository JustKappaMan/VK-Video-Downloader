{
  "manifest_version": 3,
  "name": "VK Video Downloader",
  "version": "1.0.3",
  "description": "Скачивайте видео из мобильной веб-версии VK в желаемом качестве",
  "permissions": ["activeTab"],
  "action": {},
  "content_scripts": [
    {
      "js": ["scripts/content-script.js"],
      "matches": ["https://m.vk.com/*"],
