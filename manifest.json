    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "author": {
    "email": "volozhaninkirill@gmail.com"
  },
  "homepage_url": "https://github.com/JustKappaMan/VK-Video-Downloader"
}